{
  "openapi": "3.0.0",
  "info": {
    "title": "ElasticDash Ability API",
    "description": "Endpoints for retrieving Pok√©mon ability data",
    "version": "1.0.0"
  },
  "paths": {
    "/ability/search": {
      "get": {
        "summary": "Retrieve Ability by ID or name",
        "tags": ["Ability"],
        "parameters": [
          {
            "name": "searchterm",
            "in": "query",
            "required": false,
            "schema": { "type": "string" }
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 0 },
            "description": "Page number for pagination"
          }
        ],
        "responses": {
          "200": {
            "description": "Ability details retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "results": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "number" },
                          "name": { "type": "string" },
                          "effect": { "type": "string" },
                          "shortEffect": { "type": "string" }
                        }
                      }
                    },
                    "totalCount": { "type": "integer" },
                    "totalPage": { "type": "integer" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Ability not found"
          }
        }
      }
    }
  }
}