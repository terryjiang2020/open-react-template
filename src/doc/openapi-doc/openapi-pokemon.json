    "/pokemon/details/{id}": {
      "get": {
        "summary": "Get detailed information for a specific Pokémon by its ID, including stats, types, abilities, and moves.",
        "tags": ["pokemon", "details", "id", "info", "get"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "The ID of the Pokémon to retrieve details for."
          }
        ],
        "responses": {
          "200": {
            "description": "Pokémon details retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer", "description": "Unique Pokémon ID." },
                    "name": { "type": "string", "description": "Localized name of the Pokémon." },
                    "identifier": { "type": "string", "description": "Pokémon identifier (internal name in lowercase with hyphens)." },
                    "order": { "type": "integer", "description": "Order index for sorting (matches National Pokédex order)." },
                    "height": {
                      "type": "integer",
                      "description": "Height of the Pokémon in decimeters (10 cm)."
                    },
                    "weight": {
                      "type": "integer",
                      "description": "Weight of the Pokémon in hectograms (100 g)."
                    },
                    "baseExperience": { "type": "integer", "description": "Base experience points gained when defeating this Pokémon." },
                    "flavorText": { "type": "string", "description": "Pokédex flavor text / description of the Pokémon." },
                    "speciesId": { "type": "integer", "description": "ID of the Pokémon species." },
                    "speciesName": { "type": "string", "description": "Name of the Pokémon species." },
                    "isDefault": { "type": "boolean", "description": "Whether this is the default form of the species." },
                    "totalStats": { "type": "string", "description": "Sum of all base stats as a string." },
                    "hp": { "type": "integer", "description": "Base HP (Hit Points) stat value." },
                    "attack": { "type": "integer", "description": "Base Attack stat value." },
                    "defense": { "type": "integer", "description": "Base Defense stat value." },
                    "speed": { "type": "integer", "description": "Base Speed stat value." },
                    "specialAttack": { "type": "integer", "description": "Base Special Attack stat value." },
                    "specialDefense": { "type": "integer", "description": "Base Special Defense stat value." },
                    "types": {
                      "type": "array",
