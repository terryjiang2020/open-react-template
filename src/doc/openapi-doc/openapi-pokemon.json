{
  "openapi": "3.0.0",
  "info": {
    "title": "ElasticDash Pokémon API",
    "description": "Pokémon-related endpoints for ElasticDash platform",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://devserver.elasticdash.com/api/pokemon",
      "description": "Development server"
    },
    {
      "url": "https://server.elasticdash.com/api/pokemon",
      "description": "Production server"
    }
  ],
  "paths": {
    "/pokemon/search": {
      "post": {
        "summary": "Search for Pokémon by ID or name, with optional filters (height, weight, types, stats) and sorting options.",
        "tags": ["pokemon", "search", "filter", "sort", "id", "name"],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "searchterm": { "type": "string", "description": "Search keyword for Pokémon name or ID." },
                  "filter": {
                    "type": "object",
                    "description": "Optional filters for Pokémon search, including height, weight, types, moves, and stats.",
                    "properties": {
                      "height": {
                        "type": "object",
                        "description": "Filter Pokémon by height range (in decimeters, 10 cm).",
                        "properties": {
                          "min": { "type": "integer", "description": "Minimum height in decimeters." },
                          "max": { "type": "integer", "description": "Maximum height in decimeters." }
                        }
                      },
                      "weight": {
                        "type": "object",
                        "description": "Filter Pokémon by weight range (in hectograms, 100 g).",
                        "properties": {
                          "min": { "type": "integer", "description": "Minimum weight in hectograms." },
                          "max": { "type": "integer", "description": "Maximum weight in hectograms." }
                        }
                      },
                      "mustHaveTypes": {
                        "type": "array",
                        "description": "List of type IDs that Pokémon must have.",
                        "items": { "type": "integer", "description": "Type ID." }
                      },
                      "mustNotHaveTypes": {
                        "type": "array",
                        "description": "List of type IDs that Pokémon must NOT have.",
                        "items": { "type": "integer", "description": "Type ID." }
                      },
                      "canLearnMoves": {
                        "type": "array",
                        "description": "List of moves (with method) that Pokémon can learn.",
                        "items": {
                          "type": "object",
                          "properties": {
                            "moveId": { "type": "integer", "description": "Move ID." },
                            "moveMethodId": { "type": "integer", "description": "Move method ID (e.g., level-up, TM, etc.)." }
                          }
                        }
                      },
                      "stats": {
                        "type": "array",
                        "description": "Filter Pokémon by stat ranges.",
                        "items": {
                          "type": "object",
                          "properties": {
                            "statId": { "type": "integer", "description": "Stat ID (e.g., HP, Attack, etc.)." },
                            "min": { "type": "integer", "description": "Minimum stat value." },
                            "max": { "type": "integer", "description": "Maximum stat value." }
                          }
                        }
                      }
                    }
                  },
                  "page": { "type": "integer", "default": 0, "description": "Page number for paginated results (default: 0)." },
                  "sortby": {
                    "type": "integer",
                    "default": 0,
                    "description": "Sorting option for results: 0 (A-Z), 1 (Z-A), 2 (Total stats high-low), 3 (Total stats low-high), 4 (HP high-low), 5 (HP low-high), 6 (Attack high-low), 7 (Attack low-high), 8 (Defense high-low), 9 (Defense low-high), 10 (Special Attack high-low), 11 (Special Attack low-high), 12 (Special Defense high-low), 13 (Special Defense low-high), 14 (Speed high-low), 15 (Speed low-high), 16 (Height high-low), 17 (Height low-high), 18 (Weight high-low), 19 (Weight low-high)." 
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Pokémon details retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "results": {
                      "type": "array",
                      "description": "List of Pokémon matching the search criteria.",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "number", "description": "Pokémon ID. Unique identifier for the Pokémon." },
                          "name": { "type": "string", "description": "Pokémon name. The English name of the Pokémon." },
                          "type": { "type": "string", "description": "Primary type of the Pokémon. For example: 'Fire', 'Water', etc." },
                          "abilities": {
                            "type": "array", "description": "List of ability names for the Pokémon. Each ability describes a special trait or power.",
                            "items": { "type": "string", "description": "Ability name. For example: 'Overgrow', 'Blaze', etc." }
                          },
                          "sprite": {
                            "type": "string", "description": "URL to the Pokémon sprite image. This is a direct link to the official artwork.",
                            "example": "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{id}.png"
                          }
                        }
                      }
                    },
                    "totalCount": { "type": "integer", "description": "Total number of Pokémon found. Indicates the total number of results matching the search criteria." },
                    "totalPage": { "type": "integer", "description": "Total number of pages for paginated results. Calculated based on totalCount and page size." }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Pokémon not found"
          }
        }
      }
    },
    "/pokemon/move/search": {
      "post": {
        "summary": "Search for Pokémon moves by ID or name, with optional filters (type, power, pp, damage class, priority) and ordering.",
        "tags": ["pokemon", "move", "search", "filter", "order", "id", "name"],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "searchterm": { "type": "string", "description": "Search keyword for move name or ID." },
                  "page": { "type": "integer", "default": 0, "description": "Page number for paginated results (default: 0)." },
                  "filters": {
                    "type": "object",
                    "description": "Optional filters for move search, including type, power, PP, damage class, and priority.",
                    "properties": {
                      "type": { "type": "integer", "description": "Filter by move type ID (e.g., 1 for Normal, 10 for Fire)." },
                      "power": {
                        "type": "object",
                        "description": "Filter moves by power range. Power indicates the base damage of the move.",
                        "properties": {
                          "min": { "type": "integer", "description": "Minimum power value." },
                          "max": { "type": "integer", "description": "Maximum power value." }
                        }
                      },
                      "pp": {
                        "type": "object",
                        "description": "Filter moves by PP (Power Points) range. PP indicates how many times a move can be used.",
                        "properties": {
                          "min": { "type": "integer", "description": "Minimum PP value." },
                          "max": { "type": "integer", "description": "Maximum PP value." }
                        }
                      },
                      "damageClass": { "type": "integer", "description": "Filter by damage class ID: 1 for status moves, 2 for physical moves, 3 for special moves." },
                      "priority": {
                        "type": "object",
                        "description": "Filter moves by priority range. Priority determines move order in battle (higher priority moves go first).",
                        "properties": {
                          "min": { "type": "integer", "description": "Minimum priority value (can be negative)." },
                          "max": { "type": "integer", "description": "Maximum priority value." }
                        }
                      }
                    }
                  },
                  "order": {
                    "type": "integer",
                    "default": 0,
                    "description": "Ordering options: 0 (A-Z), 1 (Z-A), 2 (Power high-low), 3 (Power low-high), 4 (PP high-low), 5 (PP low-high), 6 (Accuracy high-low), 7 (Accuracy low-high)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Move details retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "results": {
                      "type": "array",
                      "description": "List of moves matching the search criteria.",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "number", "description": "Unique move ID." },
                          "identifier": { "type": "string", "description": "Move identifier (internal name in lowercase with hyphens)." },
                          "type_id": { "type": "number", "description": "Type ID of the move (e.g., 1 for Normal, 10 for Fire)." },
                          "type_name": { "type": "string", "description": "Localized name of the move's type." },
                          "power": { "type": "integer", "description": "Base power/damage of the move. Null for status moves." },
                          "pp": { "type": "integer", "description": "Power Points - the number of times this move can be used." },
                          "accuracy": { "type": "integer", "description": "Move accuracy as a percentage (0-100). Null for moves that never miss." },
                          "priority": { "type": "integer", "description": "Priority level in battle. Higher values move first. Range typically -7 to +5." },
                          "damage_class_id": { "type": "number", "description": "Damage class ID: 1 (status), 2 (physical), 3 (special)." },
                          "damage_class_name": { "type": "string", "description": "Localized name of the damage class (e.g., 'Physical', 'Special', 'Status')." },
                          "localized_name": { "type": "string", "description": "Localized/translated name of the move in the user's language." }
                        }
                      }
                    },
                    "totalCount": { "type": "integer", "description": "Total number of moves found matching the criteria." },
                    "totalPage": { "type": "integer", "description": "Total number of pages available for pagination." }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Move not found"
          }
        }
      }
    },
    "/pokemon/ability/search": {
      "post": {
        "summary": "Search for Pokémon abilities by ID or name.",
        "tags": ["pokemon", "ability", "search", "id", "name"],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "searchterm": { "type": "string", "description": "Search keyword for ability name or ID." },
                  "page": { "type": "integer", "default": 0, "description": "Page number for paginated results (default: 0)." }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ability details retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "results": {
                      "type": "array",
                      "description": "List of Pokémon abilities matching the search criteria.",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "number", "description": "Unique ability ID." },
                          "name": { "type": "string", "description": "Localized name of the ability." },
                          "effect": { "type": "string", "description": "Detailed description of the ability's effect in battle and outside of battle." }
                        }
                      }
                    },
                    "totalCount": { "type": "integer", "description": "Total number of abilities found matching the criteria." },
                    "totalPage": { "type": "integer", "description": "Total number of pages available for pagination." }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Ability not found"
          }
        }
      }
    },
    "/pokemon/watchlist": {
      "post": {
        "summary": "Add a Pokémon to the user's watchlist by Pokémon ID.",
        "tags": ["pokemon", "watchlist", "user", "add", "favorite"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "pokemonId": { "type": "number", "description": "The ID of the Pokémon to add to the user's watchlist." }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pokémon added to watchlist or existing record returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer", "description": "Unique watchlist entry ID." },
                    "user_id": { "type": "integer", "description": "ID of the user who owns this watchlist entry." },
                    "pokemon_id": { "type": "integer", "description": "ID of the Pokémon added to the watchlist." },
                    "created_at": { "type": "string", "format": "date-time", "description": "Timestamp when the Pokémon was added to the watchlist." },
                    "deleted": { "type": "boolean", "description": "Soft delete flag. False indicates the entry is active." }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Retrieve the current user's Pokémon watchlist.",
        "tags": ["pokemon", "watchlist", "user", "get", "favorite"],
        "responses": {
          "200": {
            "description": "User's watchlist retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "description": "List of Pokémon in the user's watchlist with detailed information.",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "description": "Unique watchlist entry ID." },
                      "user_id": { "type": "integer", "description": "ID of the user who owns this watchlist entry." },
                      "pokemon_id": { "type": "integer", "description": "ID of the Pokémon in the watchlist." },
                      "created_at": { "type": "string", "format": "date-time", "description": "Timestamp when the Pokémon was added to the watchlist." },
                      "deleted": { "type": "boolean", "description": "Soft delete flag. False indicates the entry is active." },
                      "identifier": { "type": "string", "description": "Pokémon identifier (internal name in lowercase with hyphens)." },
                      "height": { "type": "integer", "description": "Height of the Pokémon in decimeters (10 cm)." },
                      "weight": { "type": "integer", "description": "Weight of the Pokémon in hectograms (100 g)." },
                      "total_stats": { "type": "integer", "description": "Sum of all base stats (HP + Attack + Defense + Special Attack + Special Defense + Speed)." },
                      "hp": { "type": "integer", "description": "Base HP (Hit Points) stat value." },
                      "attack": { "type": "integer", "description": "Base Attack stat value." },
                      "defense": { "type": "integer", "description": "Base Defense stat value." },
                      "special_attack": { "type": "integer", "description": "Base Special Attack stat value." },
                      "special_defense": { "type": "integer", "description": "Base Special Defense stat value." },
                      "speed": { "type": "integer", "description": "Base Speed stat value." },
                      "types": {
                        "type": "array",
                        "description": "List of types the Pokémon has (e.g., Fire, Water, Grass).",
                        "items": {
                          "type": "object",
                          "properties": {
                            "type": { "type": "string", "description": "Type identifier." },
                            "type_name": { "type": "string", "description": "Localized type name." }
                          }
                        }
                      },
                      "sprite": { "type": "string", "format": "url", "description": "URL to the Pokémon's sprite image." }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
