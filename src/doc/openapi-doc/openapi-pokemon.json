                        }
                      }
                    },
                    "totalCount": {
                      "type": "integer",
                      "description": "Total number of types found matching the criteria."
                    },
                    "totalPage": {
                      "type": "integer",
                      "description": "Total number of pages available for pagination."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
